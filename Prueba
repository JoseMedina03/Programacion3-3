import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;

public class TemperatureConverter extends Application {

    @Override
    public void start(Stage primaryStage) {
        // Create UI components
        Label inputLabel = new Label("Enter temperature in Celsius:");
        TextField celsiusTextField = new TextField();
        Button convertButton = new Button("Convert");          
        Label resultLabel = new Label();  

        // Set up the layout
        GridPane root = new GridPane();
        root.setPadding(new Insets(10));
        root.setVgap(10);
        root.setHgap(10);

        // Add components to the layout
        root.add(inputLabel, 0, 0);
        root.add(celsiusTextField, 1, 0);
        root.add(convertButton, 1, 1);
        root.add(resultLabel, 0, 2, 2, 1);

        // Set up event handling
        convertButton.setOnAction(event -> {
            try {
                double celsius = Double.parseDouble(celsiusTextField.getText());
                double fahrenheit = celsiusToFahrenheit(celsius);
                resultLabel.setText("Temperature in Fahrenheit: " + fahrenheit);
            } catch (NumberFormatException e) {
                resultLabel.setText("Please enter a valid number.");
            }
        });

        // Set up the scene and show the stage
        Scene scene = new Scene(root, 400, 150);
        primaryStage.setScene(scene);
        primaryStage.setTitle("Temperature Converter");
        primaryStage.show();
    }

    // Conversion logic
    private double celsiusToFahrenheit(double celsius) {
        return (celsius * 9 / 5) + 32;
    }

    public static void main(String[] args) {
        launch(args);
    }
}
  
